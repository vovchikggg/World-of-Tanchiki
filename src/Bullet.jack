class Bullet
{
    field int x;
    field int y;
    field int direction;
    field int size;
    field bool alive;
    field Objects map;

    constructor Bullet new(int _x, int _y, int _direction)
    {
        // player.getSize() - одинаковые у player и bot
        var int x_bullet_Up_Down;
        var int sizeObject;
        var int y_bullet_Left_Right; //32 - размер игрока и врага
        var int xObject;
        var int yObject;
        let xObject = _x;
        let yObject = _y;
        let sizeObject = 32;
        let x_bullet_Up_Down = xObject + (32 / 2) - 5; // координата player.X + размер / 2 - половина от размера пули
        let y_bullet_Left_Right = yObject + (32 / 2) - 5; // координата player.Y + размер / 2 - половина от размера пули
        let direction = _direction;
        //let size = 5;
        let size = 5;
        let alive = true;
        
        if (direction = 1){ //Up
            if (yObject - 5 < 0)
            {
                let alive = false;
            }
            let x = x_bullet_Up_Down;
            let y = yObject - 5;
        }
        if (direction = 2){ //Down
            if (yObject + sizeObject + size + 5 > 256)
            {
                let alive = false;
            }
            let x = x_bullet_Up_Down;
            let y = yObject + sizeObject + 5;
        }
        if (direction = 3){ //Left
            if (xObject - 5 < 0)
            {
                let alive = false;
            }
            let x = xObject - 5;
            let y = y_bullet_Left_Right;
        }
        if (direction = 4){ //Right
            if (xObject + sizeObject + size + 5 > 512)
            {
                let alive = false;
            }
            let x = xObject + sizeObject + 5;
            let y = y_bullet_Left_Right;
        }

        return this;
    }

    method void setMap(Objects _map)
    {
        let map = _map;
        return;
    }

    method int getX()
    {
        return x;
    }

    method void setX(int _x)
    {
        let x = _x;
        return;
    }

    method int getY()
    {
        return y;
    }
    method void setY(int _y)
    {
        let y = _y;
        return;
    }

    method int getDirection()
    {
        return direction;
    }

    method bool getAlive()
    {
        return alive;
    }
    method void setAlive(bool _alive)
    {
        let alive = _alive;
        return;
    }

    method int getSize()
    {
        return size;
    }
    method void setSize(int _size)
    {
        let size = _size;
        return;
    }

    method void moveUp()
    {
        if (y > 1)
        {
            let y = y - 2;
        }
        
        return;
    }

    method void moveDown() {
        if ((y + size) < 254)
        {
            let y = y + 2;
        }
        return;
    }

    method void moveLeft()
    {
        if (x > 1) {
            let x = x - 2;
        }
        return;
    }

    method void moveRight()
    {
        if ((x + size) < 510) {
            let x = x + 2;
        }
        return;
    }

    method void moveBullet()
    {
        if (direction = 1){ //Up
            if (y > 1)
            {
                do moveUp();
            }
            else{
                let alive = false;
            }
        }
        if (direction = 2){ //Down
            if (y + size < 255)
            {
                do moveDown();
            }
            else{
                let alive = false;
            }
        }
        if (direction = 3){ //Left
            if (x > 1)
            {
                do moveLeft();
            }
            else{
                let alive = false;
            }
        }
        if (direction = 4){ //Right
            if (x + size < 511)
            {
                do moveRight();
            }
            else{
                let alive = false;
            }
        }
        return;
    }

    method void dispose()
    {

        do Memory.deAAlloc(this);
        return;
    }
}